<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="at.tugraz.tc.cyfile.MainActivity">

    <ScrollView
        android:layout_width="368dp"
        android:layout_height="441dp"
        android:layout_marginStart="@dimen/default_margin_dp"
        app:layout_constraintBottom_toBottomOf="@id/BTN_ADD"
        app:layout_constraintEnd_toEndOf="@id/BTN_ADD"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_goneMarginStart="@dimen/default_margin_dp">

        <LinearLayout
            android:id="@+id/noteList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </ScrollView>

    <Button
        android:id="@+id/BTN_ADD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/default_margin_dp"
        android:layout_marginEnd="@dimen/default_margin_dp"
        android:background="@drawable/round_button"
        android:onClick="onSelectAddNote"
        android:text="@string/btn_add_note"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteX="269dp" />

</android.support.constraint.ConstraintLayout>